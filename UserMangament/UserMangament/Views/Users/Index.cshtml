@model IEnumerable<Application.Features.Users.Dtos.GetList.GetListUserOutput>
@{
    ViewData["Title"] = "قائمة المستخدمين";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- CONTENT -->
<section id="content">
    <!-- NAVBAR -->
    <nav>
        <i class='bx bx-menu'></i>
        <a href="#" class="nav-link">Categories</a>
        <form action="#">
            <div class="form-input">
                <input type="search" placeholder="Search...">
                <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
            </div>
        </form>
        <input type="checkbox" id="switch-mode" hidden>
        <label for="switch-mode" class="switch-mode"></label>
        <a href="#" class="notification">
            <i class='bx bxs-bell'></i>
            <span class="num">8</span>
        </a>
        <a href="#" class="profile">
            <img src="img/people.png">
        </a>
    </nav>
    <!-- NAVBAR -->
    <!-- MAIN -->
    <main>
        <div class="head-title">
            <div class="left">
                <h1>لوحة تحكم</h1>
                <ul class="breadcrumb">
                    <li>
                        <a href="#">لوحة التحكم</a>
                    </li>
                    <li><i class='bx bx-chevron-right'></i></li>
                    <li>
                        <a class="active" href="#">القائمة</a>
                    </li>
                </ul>
            </div>
            @*<a href="#" class="btn-download">
                <i class='bx bxs-cloud-download'></i>
                <span class="text">Download PDF</span>
            </a>*@
        </div>

        <ul class="box-info">
            <li>
                <i class='bx bxs-calendar-check'></i>
                <span class="text">
                    <h3>1020</h3>
                    <p>طلبات الاجازات</p>
                </span>
            </li>
            <li>
                <i class='bx bxs-group'></i>
                <span class="text">
                    <h3>2834</h3>
                    <p>الموظفين</p>
                </span>
            </li>
            <li>
                <i class='bx bxs-dollar-circle'></i>
                <span class="text">
                    <h3>$2543</h3>
                    <p>عدد</p>
                </span>
            </li>
        </ul>


        <div class="table-data">
            <div class="order">
                <div class="head">
                    <h3>Recent Orders</h3>
                    <i class='bx bx-search'></i>
                    <i class='bx bx-filter'></i>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>اسم المستخدم</th>
                            <th>رقم الهاتف</th>
                            <th>تاريخ الانضمام</th>
                            <th>العمر</th>
                            <th>الحالة</th>
                            <th>إجراء</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.UserName</td>
                                <td>@item.Phone</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.Age</td>
                                @if (item.IsActive == true)
                                {
                                    <td><span class="status completed">نشط</span></td>
                                }
                                else
                                {
                                    <td><span class="status completed">موقف</span></td>
                                }
                                <td class="action-buttons">
                                    <a asp-controller="Users" asp-action="DisplayUserInformation" asp-route-Id="@item.Id" class="view-button">عرض</a>
                                    <a asp-controller="Users" asp-action="EditUser" asp-route-Id="@item.Id" class="edit-button">تعديل</a>
                                    <a href="/user/delete/@item.Id" class="delete-button">حذف</a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>



    </main>
    <!-- MAIN -->
</section>
<!-- CONTENT -->