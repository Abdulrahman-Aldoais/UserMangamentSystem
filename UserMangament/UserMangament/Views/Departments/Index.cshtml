@model IEnumerable<Application.Features.Departments.Dtos.GetList.GetListDepartmentOutput>
@{
    ViewData["Title"] = "قائمة المستخدمين";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- CONTENT -->
<section id="content">
    <!-- NAVBAR -->
    <nav>
        <i class='bx bx-menu'></i>
        <a href="#" class="nav-link">Categories</a>
        <form action="#">
            <div class="form-input">
                <input type="search" placeholder="Search...">
                <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
            </div>
        </form>
        <input type="checkbox" id="switch-mode" hidden>
        <label for="switch-mode" class="switch-mode"></label>
        <a href="#" class="notification">
            <i class='bx bxs-bell'></i>
            <span class="num">8</span>
        </a>
        <a href="#" class="profile">
            <img src="img/people.png">
        </a>
    </nav>
    <!-- NAVBAR -->
    <!-- MAIN -->
    <main>
        <div class="head-title">
            <div class="left">
                <h1>الأقسام</h1>
                <ul class="breadcrumb">
                    <li>
                        <a href="#">الأقسام</a>
                    </li>
                    <li><i class='bx bx-chevron-right'></i></li>
                    <li>
                        <a class="active" href="#">القائمة</a>
                    </li>
                </ul>
            </div>
            @*<a href="#" class="btn-download">
                    <i class='bx bxs-cloud-download'></i>
                    <span class="text">Download PDF</span>
                </a>*@
        </div>

        <ul class="box-info">
            <li>
                <i class='bx bxs-calendar-check'></i>
                <span class="text">
                    <h3>1020</h3>
                    <p>عدد الأقسام</p>
                </span>
            </li>
        </ul>


        <div class="table-data">
            <div class="order">
                <div class="head">
                    <h3>Recent Orders</h3>
                    <a asp-controller="Departments" asp-action="AddDepartment" style="font-size:15px; font-weight:bold" class="btn btn-primary">Create New</a>
                    <i class='bx bx-search'></i>
                    <i class='bx bx-filter'></i>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>اسم القسم</th>
                            <th>إجراء</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td class="action-buttons">
                                    <a asp-controller="Departments" asp-action="DisplayUserInformation" asp-route-Id="@item.Id" class="btn btn-info view-button"><i class='bx bx-detail'></i></a>
                                    <a asp-controller="Departments" asp-action="EditDepartment" asp-route-Id="@item.Id" class="btn btn-primary edit-button"><i class='bx bx-edit'></i></a>
                                    <a href="/user/delete/@item.Id" class="btn btn-danger delete-button"><i class='bx bx-trash'></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>



    </main>
    <!-- MAIN -->
</section>
<!-- CONTENT -->